        div.topic#paperType
          | {{webContent.paperOption}}
        dropdown(item-id="selectedPaperType", selected="selectedPaperType", lists="paperTypes", item-click="showSelectPaperTypeDropdown()", show="showPaperTypeList", set-value="setPaperType")
      div.property-item
