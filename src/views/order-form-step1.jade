div.header-wrapper
    | {{webContent.firstStep}}
    //- div.header-triangle
  div.order-step-wrapper.form
    div.main-choice-wrapper
      div.topic#mainOption
        | {{webContent.printOption.printOption}} 
      div.choice-item
        div.main-choice-item
          div.option-content-wrapper
            label.upload-file-wrapper(ng-click="setMainChoice(0)")#choice1
              label(for="file").upload-file-button
                div.content
                  div.main
                    | {{webContent.printOption.designedOption}}
                  div.sub
                    | {{webContent.printOption.upload}}
              input(type="file", name="file", id="file")
        div.main-choice-item
          div.option-content-wrapper
            label(ng-click="setMainChoice(1)")#choice2
              div.content
                div.main
                  | {{webContent.printOption.undesignedOption}}
                div.sub
                  | {{webContent.printOption.rachaDesignOption}}
    div.property-wrapper
      div.property-item
        div.topic#size
          | {{webContent.sizeOption.sizeOption}}
        div.dropdown-wrapper
          ul
            li.dropdown-header
              ul
                li(ng-click="showFormat()")#selectedFormat
                  img
                  div.content
                    div.main
                      | {{selectedFormat.name}}
                    div.sub
                      | {{selectedFormat.description}}
            li.dropdown-selector
              ul
                li(ng-repeat="list in formats", ng-click="setFormat(list.id, $index)", ng-show="showFormatList")
                  img
                  div.content
                    div.main
                      | {{list.name}}
                    div.sub
                      | {{list.description}}
                li(ng-show="showFormatList", ng-click="setFormat(-1, -1)")
                  img
                  div.content
                    div.main
                      | {{webContent.sizeOption.designedOption}}
      div.property-item
        div.topic
          | {{webContent.sizeOption.printingSizeOption.printingSizeOption}}
        div.form
          div.input-wrapper
            input(type="text", disabled, ng-model="formatSize.width", ng-change="setWidth()", placeholder="{{webContent.sizeOption.printingSizeOption.width}}")#width
            span  X
            input(type="text", disabled, ng-model="formatSize.height", ng-change="setHeight()", placeholder="{{webContent.sizeOption.printingSizeOption.height}}")#height
            span  mm
    div.property-wrapper
      div.property-item
        div.topic#size
          | จำนวนหน้า
        div.form
          div.input-wrapper
            input(type="number", min="1", value="1")
      div.property-item
        div.topic#print
          | การเข้าเล่ม
        dropdown(item-id="selectedBookBindingDropdown", selected="selectedBookBinding", lists="bookBindings", item-click="showBookBindingDropdown()", show="showBookBindingList", set-value="setBookBinding")
    div.property-wrapper
      div.property-item
        div.topic#print
          | {{webContent.sideOption}}
        radio(lists="prints", radio-name="'print'", radio-click="setPrint")
      div.property-item
        div.topic#print
          | {{webContent.sideOption}}
        radio(lists="printColors", radio-name="'printColor'", radio-click="setPrintColor")
    div.property-wrapper
